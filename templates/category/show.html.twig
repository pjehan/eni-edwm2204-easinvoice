{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>Catégorie {{ category.name }}</h1>

    {% if category.projects|length > 0 %}
        <ul>
            {% for project in category.projects %}
                <li>{{ project.title }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Cette catégorie n'a pas de projet !</p>
    {% endif %}

    <a href="{{ path('app_category_index') }}">back to list</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
